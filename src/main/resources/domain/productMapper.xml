<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wenhao.product.dao.IProductMapper">
    <resultMap id="product" type="com.wenhao.product.domain.Product">
        <result column="productname" property="name"/>
    </resultMap>
    <insert id="save" parameterType="com.wenhao.product.domain.Product">
        INSERT INTO t_product (productname,producttype) VALUES (#{name},#{producttype})
    </insert>
    <delete id="delete">
        DELETE FROM t_product WHERE id=#{id}
    </delete>
    <update id="update" parameterType="com.wenhao.product.domain.Product">
        UPDATE t_product SET productname=#{name},producttype=#{producttype} WHERE id=#{id}
    </update>
    <select id="get" resultType="com.wenhao.product.domain.Product" resultMap="product">
        SELECT * FROM t_product WHERE id=#{id}
    </select>
    <select id="getAll" resultType="com.wenhao.product.domain.Product" resultMap="product">
        SELECT * FROM t_product
    </select>

    <select id="getAlls" resultType="com.wenhao.product.query.ProductQuery" resultMap="product">
        SELECT * FROM t_product ${querySql}
    </select>
</mapper>